{
  "author": "The Paypr Company",
  "name": "@paypr/mui5-common-components",
  "description": "Material UI Common Components",
  "license": "MIT",
  "version": "1.1.0",
  "homepage": "https://paypr.money/",
  "repository": {
    "type": "git",
    "url": "https://github.com/paypr/mui5-common-components"
  },
  "bugs": {
    "url": "https://github.com/paypr/mui5-common-components/issues"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf out",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "eslint",
    "pretty": "pretty-quick",
    "release": "standard-version",
    "prepublishOnly": "npm run rebuild && npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@mui/icons-material": "5.11.0",
    "@mui/material": "5.11.7",
    "notistack": "2.0.8",
    "react": "18.2.0",
    "react-copy-to-clipboard": "5.1.0",
    "react-dom": "18.2.0",
    "react-number-format": "5.1.3",
    "react-router-dom": "6.8.0"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/node": "18.11.18",
    "@types/react-dom": "18.0.10",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.33.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "jest-junit": "15.0.0",
    "prettier": "2.8.3",
    "pretty-quick": "3.1.3",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsutils": "3.21.0",
    "typescript": "4.9.5"
  },
  "engines": {
    "npm": ">=7.20",
    "node": ">=16.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "issueUrlFormat": "https://github.com/paypr/mui5-common-components/issues/{{id}}",
    "issuePrefixes": [
      "#"
    ],
    "scripts": {
      "postchangelog": "npm run pretty"
    }
  }
}
